@using test2.Models

@model Product

<h1 class="mb-5">اضافه کردن کالا </h1>

<form action="/Product/Create" method="post">
    <div class="mb-3">
        <label for="productid" class="form-label">شناسه کالا</label>
        <input type="text" class="form-control" id="productid" placeholder="اتوماتیک ایجاد میشود" readonly>
    </div>
    <div class="mb-3">
        <label for="producttitle" class="form-label">نام کالا </label>
        <input type="text" class="form-control" id="producttitle" placeholder="فارسی وارد کنید" name="Name">
    </div>
    <div class="mb-3">
        <label for="productcount" class="form-label">قیمت </label>
        <input type="text" class="form-control" id="productcount" placeholder="به ریال وارد کنید" name="Price">
    </div>
    <div class="mb-3">
        <label for="productprice" class="form-label">تاریخ تولید را وارد کنید </label>
        <input type="date" class="form-control" id="productprice" placeholder="" name="Date">
    </div>

    <div class="mb-3">
        <label asp-for=CategoryID class="form-label">  </label>
        @*        <select class="form-control" asp-for=CategoryID  name="CategoryID">
            @foreach (var item in )
            {
            <option value=@item> @item </option>
            }
            </select*@
        <select asp-for="CategoryID" asp-items="@(new SelectList(ViewBag.name,"Id","Name"))"></select>
    </div>
    <div class="mb-3">
        <input type="submit" class="btn btn-success" value="ثبت">

        <a class="btn btn-light" style="background-color:#a2c9f1" asp-controller="Product" asp-action="product"> بازگشت به لیست </a>
    </div>
</form>


